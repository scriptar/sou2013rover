<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ControlSimpleActivity" >

    <!-- Include data Bar -->

    <include layout="@layout/data_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/button_forward"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/arrow_button_metal_green_up" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/button_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/arrow_button_metal_green_left" />

        <ImageButton
            android:id="@+id/button_reverse"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/arrow_button_metal_green_down" />

        <ImageButton
            android:id="@+id/button_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/arrow_button_metal_green_right" />
    </LinearLayout>

</LinearLayout>